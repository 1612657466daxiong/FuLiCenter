<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="cn.ucai.fulicenter.fragments.CarFragment"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/car_swrl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/cart_tv_shuaxin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="刷新中"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_nothing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="购物车空空如也，去选点好东西吧"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/orange"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/cart_recv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/list_background"
                >


            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"></View>
    <RelativeLayout
        android:id="@+id/layout_bottom_cart"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <RadioButton
            android:id="@+id/car_buy"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:button="@null"
            android:background="@color/main_orange"
            android:text="购买"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            />
        <TextView
            android:id="@+id/should_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/car_buy"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="应付"
            android:gravity="end"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/cart_savemoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/orange"
            android:text="节省"
            android:gravity="end"
            android:layout_toLeftOf="@id/car_buy"
            android:layout_below="@id/should_pay"
            android:layout_marginRight="5dp"/>
    </RelativeLayout>

</LinearLayout>
