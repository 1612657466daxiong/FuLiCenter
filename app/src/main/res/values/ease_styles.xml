    <style name="styles_pop_window">
        <item name="@android:windowEnterAnimation">@anim/pop_enter</item>
        <item name="@android:windowExitAnimation">@anim/pop_exit</item>
    </style>
    <style name="style_menu_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/main_botton_text_color</item>
